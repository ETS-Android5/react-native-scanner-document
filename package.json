{
  "name": "@adrianowerpel/react-native-scanner-document",
  "version": "1.0.0",
  "description": "Scan documents, automatic border detection, automatic crop",
  "main": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "files": [
    "/android",
    "!/android/build",
    "/ios",
    "/src",
    "/lib",
    "/*.podspec",
    "react-native.config.js"
  ],
  "scripts": {
    "test": "jest",
    "ci:test": "jest --passWithNoTests",
    "typescript": "tsc --noEmit",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "release": "release-it",
    "example": "yarn --cwd example",
    "bootstrap": "yarn example && yarn",
    "prepare": "bob build",
    "ci:publish": "semantic-release",
    "semantic-release": "semantic-release"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "react-native",
    "react-native-component",
    "scanner",
    "ios",
    "android",
    "camera"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/adrianowerpel/react-native-scanner-document"
  },
  "author": "Adriano Werpel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adrianowerpel/react-native-scanner-document/issues"
  },
  "homepage": "https://github.com/adrianowerpel/react-native-scanner-document#readme",
  "devDependencies": {
    "@babel/runtime": "^7.17.9",
    "@commitlint/config-conventional": "^16.2.1",
    "@react-native-community/bob": "^0.17.1",
    "@release-it/conventional-changelog": "^1.1.0",
    "@types/react": "^18.0.3",
    "@types/react-native": "^0.67.4",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.19.0",
    "babel-jest": "^27.5.1",
    "babel-preset-react-native": "^4.0.1",
    "commitlint": "^16.2.3",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "eslint-plugin-react-native": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-native": "^0.68.0",
    "release-it": "^4.14.2",
    "typescript": "^4.6.3",
    "semantic-release": "^19.0.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn eslint --fix",
      "git add"
    ],
    "*.java": [
      "cd android && ./graldew spotlessApply",
      "git add"
    ]
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "module",
      "typescript"
    ],
    "files": [
      "src/"
    ]
  }
}
